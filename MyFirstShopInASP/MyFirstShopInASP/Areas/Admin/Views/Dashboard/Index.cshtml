@model IEnumerable<MyFirstShopInASP.Models.ViewModels.Pages.PageVM>

@{
    ViewBag.Title = "ListaStron";
}

<h2>Lista Stron</h2>

<p>
    @Html.ActionLink("Dodaj Nową Stronę", "AddPage")
</p>

@if (!Model.Any())
{
    <h1 class="text-center">Brak stron do wyświetlenia!</h1>
}
else
{
<table class="table">
    <tr>
        <th>
            Tytuł Strony
        </th>
        <th>
            Adres Strony
        </th>
        <th>
            Pasek Boczny
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Slug)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HasSidebar)
        </td>
        <td>
            @Html.ActionLink("Edycja", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Szczegóły", "Details", new { id = item.Id }) |
            @Html.ActionLink("Usuń", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
}